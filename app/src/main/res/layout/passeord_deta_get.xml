<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/forgot"
    tools:context=".passeord_deta_get">

    <TextView
        android:id="@+id/textonly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login help"
        android:textColor="@color/black"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/find"
        android:layout_below="@id/textonly"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Find Your Account"
        android:textColor="#040404"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/eenter"
        android:layout_below="@id/find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Enter your e-mail address or phone number linke to your account"
        android:textColor="#040404"
        android:textSize="15dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        app:hintTextColor="#000000"
        android:textColorHint="#000000"
        android:hint="E-mail"
        android:layout_below="@id/eenter"
        android:id="@+id/perent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gmail_match"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/perent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:hintTextColor="#000000"
        android:textColorHint="#000000"
        android:hint="Nubmer"
        android:id="@+id/chaild"
        app:counterTextColor="@color/black"
        app:counterEnabled="true"
        app:prefixText="+91"
        app:counterMaxLength="10"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/number_match"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_below="@id/chaild"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:id="@+id/next"
        android:textSize="20dp"
        android:textColor="#169FD6"
        android:background="@drawable/loginandcreate"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>