<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/all_dialog"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".save_Contacts">

    <TextView
        android:textColor="#000000"
        android:id="@+id/save"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Contacts"
        android:textSize="40dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ok"
        android:layout_below="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:hintTextColor="#000000"
        android:hint="name"
        app:counterTextColor="@color/black"
        app:counterEnabled="true"
        app:counterMaxLength="20">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contact_name_add"
            android:inputType="text"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/num"
        app:hintTextColor="#000000"
        app:counterTextColor="@color/black"
        android:layout_below="@+id/ok"
        android:hint="number"
        app:prefixText="+91"
        app:prefixTextColor="#000000"
        app:counterEnabled="true"
        app:counterMaxLength="10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contact_number_add"
            android:inputType="number"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:background="@drawable/loginandcreate"
        android:id="@+id/contact_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="20dp" />

</RelativeLayout>